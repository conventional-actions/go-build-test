{
  "name": "go-build-test",
  "version": "0.0.0",
  "private": true,
  "description": "GitHub action to build test binaries",
  "main": "dist/main/index.js",
  "scripts": {
    "build": "ncc build --source-map --license licenses.txt -o dist/main src/main.ts",
    "format": "prettier --write '**/*.ts'",
    "format-check": "prettier --check '**/*.ts'",
    "lint": "eslint src/**/*.ts",
    "test": "jest",
    "all": "npm run build && npm run format && npm run lint && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/conventional-actions/go-build-test.git"
  },
  "homepage": "https://github.com/conventional-actions/go-build-test",
  "bugs": {
    "url": "https://github.com/conventional-actions/go-build-test/issues"
  },
  "keywords": [
    "GitHub",
    "action",
    "golang",
    "test"
  ],
  "author": "Conventional Actions",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.9.1",
    "@actions/exec": "^1.1.1",
    "@actions/tool-cache": "^2.0.1",
    "glob": "^8.0.3"
  },
  "devDependencies": {
    "@actions/artifact": "^1.1.0",
    "@actions/glob": "^0.3.0",
    "@types/glob": "^7.2.0",
    "@types/node": "^18.7.13",
    "@typescript-eslint/parser": "^5.35.1",
    "@vercel/ncc": "^0.34.0",
    "eslint": "^8.23.0",
    "eslint-plugin-github": "^4.3.7",
    "eslint-plugin-jest": "^26.8.7",
    "jest": "^28.1.3",
    "js-yaml": "^4.1.0",
    "prettier": "^2.7.1",
    "ts-jest": "^28.0.8",
    "typescript": "^4.8.2"
  }
}
